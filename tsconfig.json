{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["esnext", "dom", "es2015"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "types": ["node", "mocha", "chai"],
    "strict": true
  },
  "include": [
    "src/**/*",
  ],
}
